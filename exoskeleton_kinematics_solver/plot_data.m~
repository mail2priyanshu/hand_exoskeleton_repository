clear all
clc

filepath = '/home/reneu-t1600/reneu-backup/Hand_Exoskeleton_Programs/12082013_exoskeleton_kinematics_experiments';
filename_sensor = 'encoder_data.csv';
data_sensor = dlmread([filepath '/' filename_sensor],'\t');
T_sensor = cumsum(data_sensor(:,1));

str = {'time','$\theta_1$','$\theta_2$','$x_3$','$\theta_4$',...
    '$\theta_5$','$\theta_6$','$\theta_7$','$T_3$','$T_4$','$\tau_m$',...
    '$\tau_j$','$y$'};

fontsize = 14;

figure(1);
bar(data_sensor(:,1));
title([str{1} ' vs Time'],'Interpreter','latex',...
    'FontName','Times New Roman','FontSize',fontsize);

for i=2:13
    figure(i);
    plot(T_sensor,data_sensor(:,i)*180/pi);
    title([str{i} ' vs Time'],'Interpreter','latex',...
        'FontName','Times New Roman','FontSize',fontsize);
end